{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "info": {
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string"
        },
        "author": {
          "type": "string"
        }
      }
    },
    "seelenweg": {
      "type": "object",
      "properties": {
        "background": {
          "$ref": "#/definitions/layers"
        },
        "items": {
          "properties": {
            "background": {
              "$ref": "#/definitions/layers"
            },
            "content": {
              "$ref": "#/definitions/CSSProperties"
            }
          }
        },
        "contextMenu": {
          "properties": {
            "background": {
              "$ref": "#/definitions/layers"
            },
            "content": {
              "$ref": "#/definitions/CSSProperties"
            }
          }
        },
        "preview": {
          "properties": {
            "background": {
              "$ref": "#/definitions/layers"
            },
            "content": {
              "$ref": "#/definitions/CSSProperties"
            },
            "items": {
              "properties": {
                "content": {
                  "$ref": "#/definitions/CSSProperties"
                },
                "title": {
                  "$ref": "#/definitions/CSSProperties"
                },
                "image": {
                  "$ref": "#/definitions/CSSProperties"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "layers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CSSProperties"
      },
      "description": "An array of CSS Properties where each object is represented as a Layer"
    },
    "CSSProperties": {
      "type": "object",
      "description": "Use Properties Interface in https://github.com/frenic/csstype"
    }
  }
}