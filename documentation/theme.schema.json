{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "info": {
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "variables": {
      "type": "object",
      "patternProperties": {
        "^--.*$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "seelenweg": {
      "type": "object",
      "properties": {
        "background": {
          "$ref": "#/definitions/layers"
        },
        "items": {
          "type": "object",
          "properties": {
            "background": {
              "$ref": "#/definitions/layers"
            },
            "icon": {
              "$ref": "#/definitions/CSSProperties"
            }
          },
          "additionalProperties": false
        },
        "contextMenu": {
          "type": "object",
          "properties": {
            "background": {
              "$ref": "#/definitions/layers"
            },
            "content": {
              "$ref": "#/definitions/CSSProperties"
            }
          },
          "additionalProperties": false
        },
        "preview": {
          "type": "object",
          "properties": {
            "background": {
              "$ref": "#/definitions/layers"
            },
            "content": {
              "$ref": "#/definitions/CSSProperties"
            },
            "items": {
              "type": "object",
              "properties": {
                "content": {
                  "$ref": "#/definitions/CSSProperties"
                },
                "title": {
                  "$ref": "#/definitions/CSSProperties"
                },
                "image": {
                  "$ref": "#/definitions/CSSProperties"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "layers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CSSProperties"
      },
      "description": "An array of CSS Properties where each object is represented as a Layer"
    },
    "CSSProperties": {
      "type": "object",
      "description": "Use Properties Interface in https://github.com/frenic/csstype"
    }
  }
}