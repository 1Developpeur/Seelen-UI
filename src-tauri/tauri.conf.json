{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "Komorebi UI",
    "version": "../package.json"
  },
  "build": {
    "beforeBuildCommand": "npm run build:komorebi && npm run build:ui",
    "devPath": "../dist/frontend-bundle",
    "distDir": "../dist/frontend-bundle"
  },
  "plugins": {},
  "tauri": {
    "cli": {
      "subcommands": {
        "settings": {
          "args": [
            {
              "name": "silent",
              "short": "s"
            }
          ]
        },
        "roulette": {
          "args": [
            {
              "name": "silent",
              "short": "s"
            }
          ]
        }
      }
    },
    "allowlist": {
      "all": false,
      "window": {
        "show": true,
        "startDragging": true,
        "close": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**", "**/*", "/**/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.komorebi-ui.settings",
      "longDescription": "",
      "resources": [
        "static/*"
      ],
      "shortDescription": "",
      "targets": "nsis",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "nsis": {
          "installerIcon": "static/icons/icon.ico",
          "template": "template.nsi"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "external",
        "fullscreen": false,
        "height": 500,
        "resizable": false,
        "title": "Komorebi UI - Settings",
        "width": 700,
        "visible": false,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
